<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ie.jim.hillfort">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".main.MainApp"
        android:allowBackup="true"
        android:icon="@mipmap/hillfort_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

              <activity
            android:name=".views.editLocation.EditLocationView"
            android:label="@string/title_activity_hillfort_maps"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" /> <!-- <activity android:name=".activities.LoginActivity" ></activity> -->
        <activity android:name=".activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.hillfort.HillfortView" />
        <activity android:name=".views.hillfortList.HillfortListView" />
        <activity
            android:name=".views.map.HillfortMapView"
            android:label="@string/title_activity_map"></activity>
    </application>

</manifest>